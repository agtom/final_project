<% provide(:title, 'Edit your lost item') %>
<div class="center jumbotron">
	<h1>Edit item</h1>
	<div class="row">
		<div class="col-md-6 col-md-offset-3">	
			<%= form_for(@item) do |f| %>
			<%= f.label :name %>
			<%= f.text_field :name, placeholder: "item.name", class: 'form-control' %>

			<%= f.label :location_lost %>
			<%= f.text_field :location_lost, placeholder: "item.location_lost", class: 'form-control' %>

			<%= f.label :reward %>
			<%= f.text_field :reward, placeholder: "item.reward", class: 'form-control' %>

			<%= f.submit "Edit lost property", class: "btn btn-primary" %>
			<% end %>
		</div>
	</div>
</div>
</div>