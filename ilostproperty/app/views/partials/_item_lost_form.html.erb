
<br>
<div id="lostItemForm" style="text-align: left;">

<%= form_for(@new_item) do |f| %>
  <% if @item %>
	<%= render 'shared/item_error_messages' %>
  <% end %>

	<%= f.label :Item_name %>
	<%= f.text_field :name, class: 'form-control' %>

	<%= f.label :location_lost %>
	<%= f.text_field :location_lost, class: 'form-control', placeholder: 'e.g. Union Square, NY' %>

	<%= f.label :reward_in_dollars %>
	<%= f.text_field :reward, class: 'form-control', placeholder: 'e.g. 20 (minimum)' %>

	<%= f.submit "Add lost item", class: "btn btn-primary" %>
<% end %>

</div>
